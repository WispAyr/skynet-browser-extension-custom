{
  "manifest_version": 3,
  "name": "Skynet Browser Manager - Enhanced",
  "version": "2.0.0",
  "description": "Enhanced remote browser management for Skynet - auto-bookmarking, shared tabs, remote debugging",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "activeTab",
    "debugger",
    "scripting",
    "webNavigation",
    "sessions",
    "history"
  ],
  "host_permissions": [
    "ws://10.10.10.123:18789/*",
    "wss://10.10.10.123:18789/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "enhanced-background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "enhanced-popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["collaboration-overlay.js", "debug-tools.js"],
      "matches": ["<all_urls>"]
    }
  ]
}